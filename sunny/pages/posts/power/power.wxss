/* pages/posts/power/power.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

text {
  font-size: 40rpx;
}

.tool {
  margin-top: 20rpx;
}

.icons{
  /* 整体居右 */
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.icons Image{
  width: 90rpx;
  height: 90rpx;
}

.position_img{
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  /*和其他元素重叠的实现方法*/
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

/* 蓝牙模块 */
.blue-container{
  padding: 0;
  margin: 0;
  align-items: flex-start;
  /* margin-top: 25px; */
}

.section{
  display: inline-block;
  width: 100%;
  position: relative;
}

.content{
  margin: auto;
  padding: auto;
  position: absolute;
  top: 5px;
  left:10px;
}

.switch{
  position: relative;
  float: right;
  right: 0px;
}

button{
  background: red\;
}

.list-item{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  border: 1px dashed #000;
}

.list-item text{
  margin-top: 10rpx;
}

.list-item button{
  margin-right: 10rpx;
}

view{
  display: inline-block;
}